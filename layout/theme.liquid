<!doctype html>
<!--[if lt IE 7]><html class="no-js ie6 oldie" lang="en"><![endif]-->
<!--[if IE 7]><html class="no-js ie7 oldie" lang="en"><![endif]-->
<!--[if IE 8]><html class="no-js ie8 oldie" lang="en"><![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" lang="en"><!--<![endif]-->
<head>

  {% if settings.use_favicon %}
  <link rel="shortcut icon" href="{{ 'favicon.png' | asset_url }}" type="image/png" />
  {% endif %}

  <meta charset="utf-8" />
  <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1' /><![endif]-->

  <title>
    {{ page_title }}{% if current_tags %} &ndash; {{ 'general.meta.tagged' | t }} "{{ current_tags | join: ', ' }}"{% endif %}{% if current_page != 1 %} &ndash; {{ 'general.meta.page' | t }} {{ current_page }}{% endif %}{% unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless %}
  </title>

  {% if page_description %}
  <meta name="description" content="{{ page_description }}" />
  {% endif %}

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="canonical" href="{{ canonical_url }}" />

  {% include 'fb-open-graph-tags' %}
  {% include 'twitter-card' %}

  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

  {{ 'social-buttons.scss.css' | asset_url | stylesheet_tag }}
  {% if settings.base_font == 'proxima-nova' or settings.header_font == 'proxima-nova' or settings.misc_font == 'proxima-nova' %}
  <script src="https://use.typekit.net/vsx3clx.js"></script>
  <script>try{Typekit.load({ async: true });}catch(e){}</script>
  {% endif %}
  {% if settings.header_font contains 'Google' %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.header_font | remove: 'Google+' }}:300,400,500,600,700">
  {% endif %}
  {% if settings.base_font contains 'Google' %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.base_font | remove: 'Google+' }}:300,400,500,600,700">
  {% endif %}
  {% if settings.misc_font contains 'Google' %}
  <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family={{ settings.misc_font | remove: 'Google+' }}:300,400,500,600,700">
  {% endif %}

  {{ '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css' | stylesheet_tag }}  
  {{ '//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css' | stylesheet_tag }}
  {% if template == 'product' or template == 'article' %}
  {{ 'social-buttons.scss.css' | asset_url | stylesheet_tag }}
  {{ 'jquery.bxslider.css' | asset_url | stylesheet_tag }}
  {% endif %}  
  {{ 'animate.min.css' | asset_url | stylesheet_tag }}
  {{ 'owl.carousel.css' | asset_url | stylesheet_tag }}    
  {{ 'cs-cosmetics.global.scss.css' | asset_url | stylesheet_tag }} 
  {{ 'cs-cosmetics.styles.scss.css' | asset_url | stylesheet_tag }}  
  {% if page.handle contains 'lookbook' %}
  {{ 'jquery.fancybox.css' | asset_url | stylesheet_tag }}
  {% endif %}

  {{ 'html5shiv.js' | asset_url | script_tag }}

  {{ content_for_header }}

  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js' | script_tag }}
  <!-- {{ 'jquery-migrate-1.2.0.min.js' | asset_url | script_tag }} -->

  {{ 'option_selection.js' | shopify_asset_url | script_tag }}
  {{ 'api.jquery.js' | shopify_asset_url | script_tag }}

  {% if template contains 'customers' %}
  {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
  {% endif %}
  {{ 'scripts.js' | asset_url | script_tag }}
  {{ 'social-buttons.js' | asset_url | script_tag }}
  {{ 'jquery.flexslider-min.js' | asset_url | script_tag }}
  {% if settings.enable_product_image_zoom %}
  {{ 'jquery.zoom.js' | asset_url | script_tag }}
  {% endif %}
  
  {{ 'jquery.fancybox.js' | asset_url | script_tag }}
  {{ '//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js' | script_tag }}
  {{ '//cdnjs.cloudflare.com/ajax/libs/jquery.isotope/2.2.0/isotope.pkgd.min.js' | script_tag }}
  {{ 'imagesloaded.pkgd.min.js' | asset_url | script_tag }}
  {% if template == 'page.contact' and settings.contact_map %}
  {{ '//maps.google.com/maps/api/js?sensor=false' | script_tag }}
  {{ 'jquery.gmap.min.js' | asset_url | script_tag }}
  {% endif %}  
  {{ 'instafeed.min.js' | asset_url | script_tag }}

</head>

<body class="{% if template == "index" %}index-template{% endif %} {% if customer %}loggedin{% endif %} Cosmetics6-Cosmetics_Perfumes">
  <!-- Newsletter Popup -->
  {% if settings.mailing_list_active %}
  {% include 'newsletter_popup' %}  
  {% endif %}
  {% if settings.general_loadingscreen %}
  <!-- Preloading -->
  <div id="loader-div">
    <div id="loader-wrapper">
      <div class="loading-div-logo">
        {% if settings.use_logo %}
        <h1><a href="/"><img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" /></a></h1>
        {% if template == 'index' %}
        <h1 style="display:none"><a href="/">{{ shop.name }}</a></h1>
        {% endif %}
        {% else %}
        <h1><a href="/">{{ shop.name }}</a></h1>
        {% endif %}
        <div id="loader"><img src="{{'ring.svg' | asset_url}}" alt="loading svg" /></div>
      </div>      
    </div>    
  </div>
  {% endif %}

  <!-- Header -->
  <header id="top" class="clearfix">
    {% include 'theme_header' %}    
  </header> 
  <div class="fix-sticky"></div>

  <!-- Main Content -->
  <div id="main-content" class="wrapper clearfix">           
    {{ content_for_layout }}          
  </div>  

  <!-- Footer -->
  <footer>
    {% include 'theme_footer' %}
  </footer>

  <script type="text/javascript">
    var index = 0;
    {% if template == 'index'%}index=1;{% endif %}
  </script>
  {{ 'modernizr.js' | asset_url | script_tag }}
  {{ 'classie.js' | asset_url | script_tag }}
  <!-- {{ 'jquery.smooth-scroll.min.js' | asset_url | script_tag }}  -->
  {{ 'jquery.bxslider.min.js' | asset_url | script_tag }}
  {{ 'owl.carousel.min.js' | asset_url | script_tag }}  
  {{ 'jquery.currencies.min.js' | asset_url | script_tag }}
  {{ 'cs-cosmetics.cart.js' | asset_url | script_tag }}
  {{ 'cs-cosmetics.script.js' | asset_url | script_tag }}
  {{ 'cs-cosmetics.optionSelect.js' | asset_url | script_tag }}  

  {% include 'quick-shop' %}
  {% include 'currencies' %}
  {% include 'ajax-cart' %}

  {% comment %} Linked Product Options {% endcomment %}
  {{ 'linkOptionSelectors.js' | asset_url | script_tag }}  

</body>
</html>
